        "class-variance-authority": "^0",
        "tw-animate-css": "^1"
      },
      "typescript": {
        "typescript": "^5",
        "@types/bun": "^1",
        "@types/node": "24.9.1",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "@types/pg": "^8"
      },
      "tanstack": {
