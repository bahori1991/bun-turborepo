  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalogs": {
      "vite": {
        "vite": "^7",
        "vite-tsconfig-paths": "^5",
        "@vitejs/plugin-react-swc": "^4"
      },
      "ui": {
        "react": "^19",
        "react-dom": "^19",
        "tailwindcss": "^4",
        "@tailwindcss/vite": "^4",
        "@radix-ui/react-slot": "^1",
        "tailwind-merge": "^3",
        "lucide-react": "^0",
