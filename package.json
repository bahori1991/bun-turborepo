{
  "name": "bun-turborepo",
  "devDependencies": {
    "@biomejs/biome": "catalog:biome",
    "turbo": "catalog:tools"
  },
  "peerDependencies": {
    "typescript": "catalog:typescript"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.1",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "ui": "bun run --filter @repo/ui ui",
