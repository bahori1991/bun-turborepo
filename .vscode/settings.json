{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "biomejs.biome",
  "editor.codeActionsOnSave": {
    "source.fixAll.biome": "explicit",
    "source.organizeImports": "never"
  },
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "files.exclude": {
    "**/node_modules": true,
    "**/.turbo": true,
    "**/.tanstack": true
  },
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "files.readonlyInclude": {
    "**/node_modules": true,
    "**/.turbo": true,
    "**/.tanstack": true,
    "**/routeTree.gen.ts": true,
    "bun.lock": true
  },
  "files.watcherExclude": {
    "**/node_modules": true,
    "**/.turbo": true,
    "**/.tanstack": true,
    "**/routeTree.gen.ts": true,
    "bun.lock": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/.turbo": true,
    "**/.tanstack": true,
    "**/routeTree.gen.ts": true,
    "bun.lock": true
  }
}
